<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_method_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del método"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_method_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del método"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_study_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25 min estudio / 5 min descanso"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_repetitions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 repeticiones"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />

    </LinearLayout>

</androidx.cardview.widget.CardView>